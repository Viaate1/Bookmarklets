javascript:(function(){    var id = prompt("Enter the video/playlist ID:");    if(!id) return;    var pip = confirm("Do you want a 'picture in picture' option?");    var container = document.createElement(%27div%27);    var iframe = document.createElement(%27iframe%27);    iframe.src = %27https://www.youtube.com/embed/%27 + id + (id.startsWith("PL") ? "?listType=playlist" : "");    iframe.style.width = pip ? %2750%%27 : %27100%%27;    iframe.style.height = pip ? %2750%%27 : %27100%%27;    iframe.style.position = %27absolute%27;    iframe.style.top = pip ? %2750%%27 : %2750%%27;    iframe.style.left = pip ? %2750%%27 : %2750%%27;    iframe.style.transform = %27translate(-50%,-50%)%27;    iframe.setAttribute("frameborder", "0");    iframe.setAttribute("allow", "accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture");    iframe.setAttribute("allowfullscreen", "");    container.appendChild(iframe);    container.style.position = %27fixed%27;    container.style.width= pip ? %2750%%27 : %27100%%27;    container.style.height= pip ? %2750%%27 : %27100%%27;    container.style.top = %270%27;    container.style.left = %270%27;    container.style.zIndex=%279999%27;    document.body.appendChild(container);})();
